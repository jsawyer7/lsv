<div class="claims-container">
  <div class="claims-header">
    <%= link_to new_claim_path, class: "btn-primary new-claim-button" do %>
      <%= image_tag "newclaim.png", class: "btn-icon" %>
      <span>New Claim</span>
    <% end %>
  </div>

  <div class="claims-grid">
    <% @claims.each do |claim| %>
      <%= link_to claim_path(claim), class: "claim-card" do %>
        <div class="claim-content">
          <p class="claim-text">
            <%= truncate(claim.content, length: 64) %>
          </p>
          <span class="badge badge-<%= claim_status_class(claim.result) %>">
            <%= claim.result %>
          </span>
        </div>
      <% end %>
    <% end %>
  </div>

  <% if @claims.empty? %>
    <div class="empty-state">
      <p>No claims have been submitted yet.</p>
    </div>
  <% else %>
    <div class="pagination-container">
      <%= paginate @claims %>
    </div>
  <% end %>
</div>