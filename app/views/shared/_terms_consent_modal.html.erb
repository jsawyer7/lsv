<% if user_signed_in? && !current_user.terms_agreed_at.present? %>
<div id="terms-consent-modal" class="terms-consent-modal" style="display: none;">
  <div class="terms-consent-content">
    <div class="terms-consent-header">
      <h2>Terms and Conditions</h2>
      <p>Please review and accept our terms to continue using VeriFaith</p>
    </div>
    
    <div class="terms-consent-body">
      <div class="terms-text">
        <h3>1. Location Access</h3>
        <p>We use your approximate location (derived from your IP address) to:</p>
        <ul>
          <li>Suggest nearby peers and connections</li>
          <li>Improve your experience by showing relevant local content</li>
          <li>Help you discover users in your area</li>
        </ul>
        <p><strong>Your location data is:</strong></p>
        <ul>
          <li>Stored securely and used only for peer recommendations</li>
          <li>Not shared with third parties</li>
          <li>Approximate (city/region level, not precise GPS)</li>
          <li>You can update or remove it anytime in settings</li>
        </ul>

        <h3>2. Data Usage</h3>
        <p>We use your data to provide and improve our services, including:</p>
        <ul>
          <li>Peer recommendations based on mutual connections and location</li>
          <li>Social network integration (Facebook, Google, Twitter) for finding connections</li>
          <li>Personalized content and features</li>
        </ul>

        <h3>3. Privacy</h3>
        <p>Your privacy is important to us. We comply with GDPR, CCPA, and other privacy regulations.</p>
        <p>For more details, please read our <a href="<%= privacy_path %>" target="_blank">Privacy Policy</a> and <a href="<%= terms_path %>" target="_blank">Terms of Service</a>.</p>
      </div>

      <%= form_with url: accept_terms_path, method: :post, local: false, class: "terms-consent-form", id: "terms-consent-form" do |f| %>
        <div class="terms-checkboxes">
          <label class="terms-checkbox-label">
            <input type="checkbox" id="terms-agree-all" name="accept_all" required>
            <span>I have read and agree to the <a href="<%= terms_path %>" target="_blank">Terms of Service</a>, <a href="<%= privacy_path %>" target="_blank">Privacy Policy</a>, and consent to the use of my approximate location for peer recommendations</span>
          </label>
        </div>

        <div class="terms-consent-actions">
          <button type="button" class="btn-secondary" id="terms-decline-btn" onclick="handleDecline()">
            Decline
          </button>
          <button type="submit" class="btn-primary" id="terms-accept-btn" disabled>
            Accept and Continue
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const modal = document.getElementById('terms-consent-modal');
  const form = document.getElementById('terms-consent-form');
  const acceptBtn = document.getElementById('terms-accept-btn');
  const termsCheckbox = document.getElementById('terms-agree-all');
  
  // Show modal only if not previously dismissed in this session
  if (modal && !localStorage.getItem('terms_modal_dismissed')) {
    modal.style.display = 'block';
  }
  
  // Allow closing modal by clicking outside
  modal.addEventListener('click', function(e) {
    if (e.target === modal) {
      handleDecline();
    }
  });
  
  // Allow closing with Escape key
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape' && modal.style.display === 'block') {
      handleDecline();
    }
  });
  
  // Enable/disable accept button based on checkbox
  function updateAcceptButton() {
    if (termsCheckbox.checked) {
      acceptBtn.disabled = false;
    } else {
      acceptBtn.disabled = true;
    }
  }
  
  termsCheckbox.addEventListener('change', updateAcceptButton);
  
  // Handle decline button - allow user to continue without accepting
  window.handleDecline = function() {
    // Mark that user has seen the modal (store in session/localStorage to avoid showing again immediately)
    localStorage.setItem('terms_modal_dismissed', 'true');
    
    // Hide the modal
    modal.style.display = 'none';
    
    // Optional: You can track this in the backend if needed
    // For now, just hide the modal and let them continue
  };
  
  // Handle form submission
  form.addEventListener('submit', function(e) {
    e.preventDefault();
    
    acceptBtn.disabled = true;
    acceptBtn.textContent = 'Processing...';
    
    const formData = new FormData(form);
    // Add all required fields when checkbox is checked
    if (termsCheckbox.checked) {
      formData.append('terms_agreed', '1');
      formData.append('privacy_agreed', '1');
      formData.append('location_consent', '1');
    }
    
    fetch(form.action, {
      method: 'POST',
      body: formData,
      headers: {
        'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content,
        'Accept': 'application/json'
      }
    })
    .then(response => response.json())
    .then(data => {
      if (data.success) {
        acceptBtn.textContent = 'Accepted!';
        acceptBtn.style.backgroundColor = '#28a745';
        
        setTimeout(() => {
          modal.style.display = 'none';
          // Reload page to reflect changes
          window.location.reload();
        }, 1000);
      } else {
        alert(data.message || 'An error occurred. Please try again.');
        acceptBtn.disabled = false;
        acceptBtn.textContent = 'Accept and Continue';
      }
    })
    .catch(error => {
      console.error('Error:', error);
      alert('An error occurred. Please try again.');
      acceptBtn.disabled = false;
      acceptBtn.textContent = 'Accept and Continue';
    });
  });
});
</script>

<style>
.terms-consent-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  z-index: 99999 !important;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow-y: auto;
  padding: 20px;
  box-sizing: border-box;
}

.terms-consent-content {
  background: white;
  border-radius: 12px;
  max-width: 600px;
  width: 100%;
  max-height: 90vh;
  overflow-y: auto;
  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
  margin: auto;
  position: relative;
}

.terms-consent-header {
  padding: 30px 30px 20px;
  border-bottom: 1px solid #e0e0e0;
}

.terms-consent-header h2 {
  margin: 0 0 10px;
  font-size: 24px;
  font-weight: 600;
}

.terms-consent-header p {
  margin: 0;
  color: #666;
  font-size: 14px;
}

.terms-consent-body {
  padding: 30px;
}

.terms-text {
  margin-bottom: 30px;
  max-height: 400px;
  overflow-y: auto;
  padding-right: 10px;
}

.terms-text h3 {
  margin: 20px 0 10px;
  font-size: 18px;
  font-weight: 600;
  color: #333;
}

.terms-text h3:first-child {
  margin-top: 0;
}

.terms-text p {
  margin: 10px 0;
  line-height: 1.6;
  color: #555;
  font-size: 14px;
}

.terms-text ul {
  margin: 10px 0 10px 20px;
  padding: 0;
}

.terms-text li {
  margin: 8px 0;
  line-height: 1.6;
  color: #555;
  font-size: 14px;
}

.terms-text a {
  color: #007bff;
  text-decoration: underline;
}

.terms-checkboxes {
  margin: 30px 0;
}

.terms-checkbox-label {
  display: flex;
  align-items: flex-start;
  margin: 30px 0;
  cursor: pointer;
  font-size: 14px;
  line-height: 1.6;
  justify-content: center;
}

.terms-checkbox-label input[type="checkbox"] {
  margin-right: 10px;
  margin-top: 3px;
  cursor: pointer;
  width: 18px;
  height: 18px;
  flex-shrink: 0;
}

.terms-checkbox-label span {
  color: #333;
}

.terms-checkbox-label a {
  color: #007bff;
  text-decoration: underline;
}

.terms-consent-actions {
  text-align: center;
  padding-top: 20px;
  border-top: 1px solid #e0e0e0;
  display: flex;
  gap: 15px;
  justify-content: center;
}

.terms-consent-actions .btn-primary {
  padding: 12px 40px;
  font-size: 16px;
  font-weight: 600;
  border: none;
  border-radius: 6px;
  cursor: pointer;
  background: #007bff;
  color: white;
  transition: background 0.3s;
}

.terms-consent-actions .btn-primary:hover:not(:disabled) {
  background: #0056b3;
}

.terms-consent-actions .btn-primary:disabled {
  background: #ccc;
  cursor: not-allowed;
}

.terms-consent-actions .btn-secondary {
  padding: 12px 40px;
  font-size: 16px;
  font-weight: 600;
  border: 1px solid #ccc;
  border-radius: 6px;
  cursor: pointer;
  background: white;
  color: #333;
  transition: background 0.3s;
}

.terms-consent-actions .btn-secondary:hover {
  background: #f5f5f5;
}

/* Scrollbar styling for terms text */
.terms-text::-webkit-scrollbar {
  width: 8px;
}

.terms-text::-webkit-scrollbar-track {
  background: #f1f1f1;
  border-radius: 4px;
}

.terms-text::-webkit-scrollbar-thumb {
  background: #888;
  border-radius: 4px;
}

.terms-text::-webkit-scrollbar-thumb:hover {
  background: #555;
}
</style>
<% end %>

