<% if user_signed_in? %>
  <div class="user-info-block">
    
    <div class="user-info-background">
      <% if current_user.background_image_url.present? %>
        <%= image_tag current_user.background_image_url, alt: "Background", class: "background-img" %>
      <% else %>
        <div class="background-placeholder"></div>
      <% end %>
    </div>
    
   
    <div class="user-info-profile-pic">
      <% if current_user.avatar_url.present? %>
        <%= image_tag current_user.avatar_url, alt: current_user.full_name || "Profile", class: "profile-img" %>
      <% else %>
        <%= image_tag 'default-avatar.png', alt: "Profile", class: "profile-img" %>
      <% end %>
    </div>
    
   
    <div class="user-info-name">
      <%= current_user.full_name.presence || "User" %>
    </div>
    
    
    <div class="user-info-about">
      <%= current_user.about.presence || "No description available" %>
    </div>
    
   
    <div class="user-info-address">
      <% address_parts = [] %>
      <% address_parts << current_user.city if current_user.city.present? %>
      <% address_parts << current_user.country if current_user.country.present? %>
      <%= address_parts.any? ? address_parts.join(", ") : "Location not available" %>
    </div>
  </div>
<% end %>

