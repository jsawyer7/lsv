<%# Core Functionality Section %>
<div class="core-functionality">
  <h2>Core Functionality</h2>
  
  <div class="features-grid">
    <div class="feature-card">
      <div class="icon">
        <i class="fas fa-paper-plane"></i>
      </div>
      <h4>Submit a Claim</h4>
      <p class="body-small">With Scriptural, historical, or logical evidence.</p>
    </div>

    <div class="feature-card">
      <div class="icon">
        <i class="fas fa-check-circle"></i>
      </div>
      <h4>Verified by AI + Peers</h4>
      <p class="body-small">Claim becomes a Fact after dual validation.</p>
    </div>

    <div class="feature-card">
