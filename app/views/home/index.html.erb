<%# Hero Section %>
<div class="hero-section">
  <div class="nav-container">
    <div class="logo">
      <%= link_to root_path do %>
        <h3>Verifaith</h3>
      <% end %>
    </div>

    <button type="button" class="menu-toggle" aria-expanded="false" aria-label="Toggle navigation menu">
      <span></span>
      <span></span>
      <span></span>
    </button>

    <div class="nav-buttons">
      <%= link_to "Sign In", new_user_session_path, class: "btn-secondary" %>
      <%= link_to "Get Started", new_user_registration_path, class: "btn-primary" %>
    </div>
  </div>

  <div class="main-content">
    <div class="floating-avatars">
      <div class="avatar avatar-1">
        <%= render partial: 'shared/svgs', locals: { svg_class: 'svg-avatar-1' } %>
      </div>
      <div class="avatar avatar-2">
        <%= render partial: 'shared/svgs', locals: { svg_class: 'svg-avatar-2' } %>
      </div>
      <div class="avatar avatar-3">
        <%= render partial: 'shared/svgs', locals: { svg_class: 'svg-avatar-3' } %>
      </div>
      <div class="avatar avatar-4">
        <%= render partial: 'shared/svgs', locals: { svg_class: 'svg-avatar-4' } %>
      </div>
      <div class="avatar avatar-5">
        <%= render partial: 'shared/svgs', locals: { svg_class: 'svg-avatar-5' } %>
      </div>
      <div class="avatar avatar-6">
        <%= render partial: 'shared/svgs', locals: { svg_class: 'svg-avatar-6' } %>
      </div>
    </div>

    <h1>Faith Deserve Facts</h1>
    <p class="body-large">Discover and follow theological leaders who build on verifiable claims, not assumptions.</p>
    
    <div class="cta-buttons">
      <%= link_to "Explore Verified Facts", new_user_session_path, class: "btn-primary" %>
      <button class="btn-watch">
        <div class="play-circle">
          <i class="fas fa-play"></i>
        </div>
        Watch How It Works
      </button>
    </div>
  </div>
</div>

<%# Core Functionality Section %>
<div class="core-functionality">
  <h2>Core Functionality</h2>
  
  <div class="features-grid">
    <div class="feature-card">
      <div class="icon">
        <i class="fas fa-paper-plane"></i>
      </div>
      <h4>Submit a Claim</h4>
      <p class="body-small">With Scriptural, historical, or logical evidence.</p>
    </div>

    <div class="feature-card">
      <div class="icon">
        <i class="fas fa-check-circle"></i>
      </div>
      <h4>Verified by AI + Peers</h4>
      <p class="body-small">Claim becomes a Fact after dual validation.</p>
    </div>

    <div class="feature-card">
      <div class="icon">
        <i class="fas fa-book-reader"></i>
      </div>
      <h4>Follow Interpretive Theories</h4>
      <p class="body-small">Explore frameworks built only on confirmed Facts.</p>
    </div>
  </div>
</div>

<%# Featured Claims Section %>
<div class="featured-claims">
  <h2>Featured Claims</h2>
  
  <div class="claims-grid">
    <div class="claim-card success-card">
      <p class="claim-text">Muhammad is the messenger of God</p>
      <span class="badge badge-success">Fact</span>
    </div>

    <div class="claim-card neutral-card">
      <p class="claim-text">Jesus was not crucified</p>
      <span class="badge badge-neutral">Claim</span>
    </div>

    <div class="claim-card danger-card">
      <p class="claim-text">The earth is flat</p>
      <span class="badge badge-danger">False</span>
    </div>
  </div>
</div>

<%# LSV Section %>
<div class="lsv-section">
  <h2>What Is LSV?</h2>
  <p class="body-large">Literal Source Verification is a method to identify indisputable religious facts using only scripture, history and logic.</p>
  <%= link_to "Learn About LSV", new_user_session_path, class: "btn-primary" %>
</div>

<%# Join Movement Section %>
<div class="join-movement">
  <div class="content">
    <div class="text-content">
      <div class="circle-decoration"></div>
      <h2>Join The Movement Of Verified Faith</h2>
      <p>Become a part of a community dedicated to promoting truth and authenticity in faith through verified evidence-based claims.</p>
    </div>
    <div class="downward-arrow">
      <%= render partial: 'shared/svgs', locals: { svg_class: 'svg-curved-arrow' } %>
    </div>
    <%= link_to "Become a Verified Leader", new_user_session_path, class: "btn-secondary" %>
  </div>
</div>

