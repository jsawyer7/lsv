<%= render 'shared/twitter_signin_js' %>
<%# Sign Up Page %>
<div class="login-container">
  <%# Left side content %>
  <div class="login-left">
    <h1>Truth You Can Test</h1>
    <p>Join a community where beliefs are explored, facts are verified, and every claim is backed by scripture, history, or logic.</p>
    <p>Create your free account to start exploring today.</p>
  </div>

  <%# Right side signup form %>
  <div class="login-right">
    <div class="login-form-container">
      <%= image_tag "verifaith-logo.png", alt: "Verifaith Logo", class: "login-logo" %>
      
      <h2>Sign up to your account</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "login-form" }) do |f| %>
        <div class="form-group">
          <%= f.label :email, "Email Address" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Enter email" %>
        </div>

        <div class="form-group">
          <%= f.label :password %>
          <div class="password-input-container">
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "Enter password" %>
            <button type="button" class="toggle-password">
              <i class="far fa-eye"></i>
            </button>
          </div>
          <span class="password-hint">Must be at least 6 characters</span>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %>
          <div class="password-input-container">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm password" %>
            <button type="button" class="toggle-password">
              <i class="far fa-eye"></i>
            </button>
          </div>
        </div>

        <%= f.submit "Sign Up", class: "login-button" %>
      <% end %>

      <div class="divider">
        <span>OR</span>
      </div>

      <%= button_to user_google_oauth2_omniauth_authorize_path, data: { turbo: false }, class: "google-login" do %>
        <%= image_tag "https://www.google.com/favicon.ico", alt: "Google", class: "google-icon" %>
        Continue with Google
      <% end %>

      <%= link_to user_twitter_omniauth_authorize_path, class: "twitter-login", data: { turbo: false } do %>
        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor" class="twitter-icon">
          <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
        </svg>
        Continue with X
      <% end %>

      <div class="signup-prompt">
        Already have an account? <%= link_to "Login", new_session_path(resource_name) %>
      </div>
    </div>
  </div>
</div>
