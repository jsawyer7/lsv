<div class="login-container">
  <div class="login-box">
    <div class="login-header">
      <div class="logo logo--small">lv</div>
      <h1>Literal<span>&nbsp;verification</span></h1>
    </div>

    <h2>Create your Literal Verification account</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "reg-input-field" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "reg-input-field" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "reg-input-field" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign Up", class: "login-button" %>
      </div>

      <div class="bottom-signup">
        <span>Already have an account?</span>
        <%= link_to "Sign In", new_session_path(resource_name) %>
      </div>
    <% end %>
  </div>
</div>
