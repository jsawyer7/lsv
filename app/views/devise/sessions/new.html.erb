<%= render 'shared/apple_signin_js' %>
<%# Left side content %>
<div class="login-container">
  <div class="login-left">
    <h1>Truth You Can Test</h1>
    <p>Join a community where beliefs are explored, facts are verified, and every claim is backed by scripture, history, or logic.</p>
    <p>Create your free account to start exploring today.</p>
  </div>

  <%# Right side login form %>
  <div class="login-right">
    <div class="login-form-container">
      <%= image_tag "verifaith-logo.png", alt: "Verifaith Logo", class: "login-logo" %>
      
      <h2>Login to Your Account</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "login-form" }) do |f| %>
        <div class="form-group">
          <%= f.label :email, "Email Address" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Enter email" %>
        </div>

        <div class="form-group">
          <%= f.label :password, "Password" %>
          <div class="password-input-container">
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "Enter password" %>
            <button type="button" class="toggle-password">
              <i class="far fa-eye"></i>
            </button>
          </div>
        </div>

        <div class="form-options">
          <div class="remember-me">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "Remember me" %>
          </div>
          <%= link_to "Forgot Password?", new_password_path(resource_name), class: "forgot-password" %>
        </div>

        <%= f.submit "Login", class: "login-button" %>
      <% end %>

      <div class="divider">
        <span>OR</span>
      </div>

      <%= button_to user_google_oauth2_omniauth_authorize_path, data: { turbo: false }, class: "google-login" do %>
        <%= image_tag "https://www.google.com/favicon.ico", alt: "Google", class: "google-icon" %>
        Continue with Google
      <% end %>

      <%= button_to user_apple_omniauth_authorize_path, data: { turbo: false }, class: "apple-login" do %>
        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor" class="apple-icon">
          <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
        </svg>
        Continue with Apple
      <% end %>

      <div class="signup-prompt">
        Don't have an account? <%= link_to "Sign Up", new_registration_path(resource_name) %>
      </div>
    </div>
  </div>
</div>
