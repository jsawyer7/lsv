<%# Reset Password Page %>
<div class="login-container">
  <%# Left side content %>
  <div class="login-left">
    <h1>Truth You Can Test</h1>
    <p>Join a community where beliefs are explored, facts are verified, and every claim is backed by scripture, history, or logic.</p>
    <p>Create your free account to start exploring today.</p>
  </div>

  <%# Right side reset password form %>
  <div class="login-right">
    <div class="login-form-container">
      <%= image_tag "verifaith-logo.png", alt: "Verifaith Logo", class: "login-logo" %>
      
      <div class="form-icon">
        <%= image_tag "forgot.png", alt: "Reset Password Icon" %>
      </div>
      
      <h2 class="forgot-password">Reset Password</h2>
      <p class="form-description">Create a new password for your account.</p>

      <% if flash[:error].present? %>
        <div class="flash-error">
          <i class="fas fa-exclamation-circle"></i>
          <%= flash[:error] %>
        </div>
      <% end %>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "login-form" }) do |f| %>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-group">
          <%= f.label :password, "New Password" %>
          <div class="password-input-container">
            <%= f.password_field :password, autofocus: true, placeholder: "Enter password" %>
            <button type="button" class="toggle-password">
              <i class="far fa-eye"></i>
            </button>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, "Confirm New Password" %>
          <div class="password-input-container">
            <%= f.password_field :password_confirmation, placeholder: "Confirm password" %>
            <button type="button" class="toggle-password">
              <i class="far fa-eye"></i>
            </button>
          </div>
        </div>

        <%= f.submit "Reset Password", class: "login-button" %>
      <% end %>
    </div>
  </div>
</div>

<%= render "devise/shared/links" %>
