<%# Forgot Password Page %>
<div class="login-container">
  <%# Left side content %>
  <div class="login-left">
    <h1>Truth You Can Test</h1>
    <p>Join a community where beliefs are explored, facts are verified, and every claim is backed by scripture, history, or logic.</p>
    <p>Create your free account to start exploring today.</p>
  </div>

  <%# Right side forgot password form %>
  <div class="login-right">
    <div class="login-form-container">
      <%= image_tag "verifaith-logo.png", alt: "Verifaith Logo", class: "login-logo" %>
      
      <div class="form-icon">
        <%= image_tag "forgot.png", alt: "Forgot Password Icon" %>
      </div>
      
      <h2>Forgot Password?</h2>
      <p class="form-description">Enter the email of your account and we will send the email to reset your password.</p>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "login-form" }) do |f| %>
        <div class="form-group">
          <%= f.label :email, "Email Address" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Enter email" %>
        </div>

        <%= f.submit "Continue", class: "login-button" %>
      <% end %>

      <div class="login-links">
        <span>Remember Password? <%= link_to "Login", new_session_path(resource_name) %></span>
      </div>
    </div>
  </div>
</div>
