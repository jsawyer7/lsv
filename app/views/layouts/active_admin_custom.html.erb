<!doctype html>
<html lang="en"
  class="layout-navbar-fixed layout-menu-fixed layout-compact"
  dir="ltr"
  data-skin="default"
  data-template="vertical-menu-template"
  data-bs-theme="light">
  <head>
    <meta charset="utf-8" />
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0" />
    <meta name="robots" content="noindex" />

    <title>VeriFaith Admin Panel</title>

    <meta name="description" content="VeriFaith Admin Panel" />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Immediate CSS to prevent FOUC -->
    <style>
      /* Hide Active Admin elements immediately to prevent flash */
      #header, #header h1, #header h1 a, #utility_nav, #title_bar, #title_bar_left, #title_bar_right, .breadcrumb, #active_admin_content .sidebar, #active_admin_content .sidebar_section, .sidebar, .sidebar_section, #sidebar, #sidebar_sections, #sidebar_sections_wrapper, #sidebar_sections_wrapper .sidebar_section, #sidebar_sections_wrapper .sidebar_section h3, #sidebar_sections_wrapper .sidebar_section ul, #sidebar_sections_wrapper .sidebar_section li, #sidebar_sections_wrapper .sidebar_section a, #active_admin_content .sidebar_sections, #active_admin_content .sidebar_sections .sidebar_section, #active_admin_content .sidebar_sections .sidebar_section h3, #active_admin_content .sidebar_sections .sidebar_section ul, #active_admin_content .sidebar_sections .sidebar_section li, #active_admin_content .sidebar_sections .sidebar_section a, #active_admin_content .content_wrapper .sidebar, #active_admin_content .content_wrapper .main_content .sidebar, #active_admin_content .content_wrapper .main_content .sidebar_section, #active_admin_content .content_wrapper .main_content .sidebar_section ul, #active_admin_content .content_wrapper .main_content .sidebar_section li, #active_admin_content .content_wrapper .main_content .sidebar_section a { display: none !important; }
    </style>

    <!-- Core CSS -->
    <%= stylesheet_link_tag "materio", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "admin", "data-turbo-track": "reload" %>

    <!-- Helpers -->
  </head>

  <body data-controller="<%= controller_name %>" data-action="<%= action_name %>">
    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar">
      <div class="layout-container">
        <!-- Menu -->
        <%= render "shared/sidebar" %>

        <div class="menu-mobile-toggler d-xl-none rounded-1">
          <a href="javascript:void(0);" class="layout-menu-toggle menu-link text-large text-bg-secondary p-2 rounded-1">
            <i class="ri ri-menu-line icon-base"></i>
            <i class="ri ri-arrow-right-s-line icon-base"></i>
          </a>
        </div>
        <!-- / Menu -->

        <!-- Layout container -->
        <div class="layout-page">
          <!-- Navbar -->
          <nav class="layout-navbar container-xxl navbar-detached navbar navbar-expand-xl align-items-center bg-navbar-theme" id="layout-navbar">
            <div class="layout-menu-toggle navbar-nav align-items-xl-center me-4 me-xl-0 d-xl-none">
              <a class="nav-item nav-link px-0 me-xl-6" href="javascript:void(0)">
                <i class="icon-base ri ri-menu-line icon-md"></i>
              </a>
            </div>

            <div class="navbar-nav-right d-flex align-items-center justify-content-end" id="navbar-collapse">
              <!-- Search -->
              <div class="navbar-nav align-items-center">
                <div class="nav-item navbar-search-wrapper mb-0">
                  <a class="nav-item nav-link search-toggler px-0" href="javascript:void(0);">
                    <span class="d-inline-block text-body-secondary fw-normal" id="autocomplete"></span>
                  </a>
                </div>
              </div>
              <!-- /Search -->

              <ul class="navbar-nav flex-row align-items-center ms-md-auto">
                <!-- User -->
                <li class="nav-item navbar-dropdown dropdown-user dropdown">
                  <a class="nav-link dropdown-toggle hide-arrow p-0" href="javascript:void(0);" data-bs-toggle="dropdown">
                    <div class="d-flex align-items-center">
                      <div class="avatar avatar-sm me-2">
                        <img src="<%= asset_path("avatars/#{(current_user&.id % 20) + 1}.png") %>" 
                             alt="<%= current_user&.full_name || current_user&.email || 'User' %>" 
                             class="rounded-circle">
                      </div>
                      <span class="text-dark fw-medium"><%= current_user&.full_name&.present? ? current_user.full_name : current_user&.email&.split('@')&.first&.titleize || 'User' %></span>
                    </div>
                  </a>
                  <ul class="dropdown-menu dropdown-menu-end mt-3 py-2">
                    <li>
                      <div class="px-3 py-2">
                        <h6 class="mb-0 small"><%= current_user&.full_name&.present? ? current_user.full_name : current_user&.email&.split('@')&.first&.titleize || 'User' %></h6>
                        <small class="text-body-secondary"><%= current_user&.role&.titleize || 'User' %></small>
                      </div>
                    </li>
                    <li>
                      <div class="dropdown-divider"></div>
                    </li>
                    <li>
                      <div class="d-grid px-4 pt-2 pb-1">
                        <%= link_to destroy_user_session_path, method: :delete, class: "btn btn-danger d-flex" do %>
                          <small class="align-middle">Logout</small>
                          <i class="icon-base ri ri-logout-box-r-line ms-2 icon-16px"></i>
                        <% end %>
                      </div>
                    </li>
                  </ul>
                </li>
                <!--/ User -->
              </ul>
            </div>
          </nav>

          <!-- / Navbar -->

          <!-- Content wrapper -->
          <div class="content-wrapper">
            <!-- Content -->
            <div class="container-xxl flex-grow-1 container-p-y">
              <% flash.each do |type, msg| %>
                <div class="alert alert-<%= type == 'notice' ? 'success' : 'danger' %> alert-dismissible" role="alert">
                  <%= msg %>
                  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
              <% end %>

              <%= yield %>
            </div>
            <!-- / Content -->

            <!-- Footer -->
            <footer class="content-footer footer bg-footer-theme">
              <div class="container-xxl">
                <div class="footer-container d-flex align-items-center justify-content-between py-4 flex-md-row flex-column">
                  <div class="mb-2 mb-md-0">
                    &#169;
                    <script>
                      document.write(new Date().getFullYear());
                    </script>
                    , made with ❤️ by
                    <a href="#" target="_blank" class="footer-link fw-medium">VeriFaith</a>
                  </div>
                  <div class="d-none d-lg-inline-block">
                    <a href="#" target="_blank" class="footer-link me-4">License</a>
                    <a href="#" target="_blank" class="footer-link me-4">Documentation</a>
                    <a href="#" target="_blank" class="footer-link d-none d-sm-inline-block">Support</a>
                  </div>
                </div>
              </div>
            </footer>
            <!-- / Footer -->

            <div class="content-backdrop fade"></div>
          </div>
          <!-- Content wrapper -->
        </div>
        <!-- / Layout page -->
      </div>

      <!-- Overlay -->
      <div class="layout-overlay layout-menu-toggle"></div>

      <!-- Drag Target Area To SlideIn Menu On Small Screens -->
      <div class="drag-target"></div>
    </div>
    <!-- / Layout wrapper -->

    <!-- Core JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/perfect-scrollbar@1.5.5/dist/perfect-scrollbar.min.js"></script>
    
    <!-- UJS functionality via CDN -->
    <script src="https://cdn.jsdelivr.net/npm/@rails/ujs@7.0.4/dist/rails-ujs.min.js"></script>
    <script>
      Rails.start();
    </script>
    
  </body>
</html>
