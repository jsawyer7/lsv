<!DOCTYPE html>
<html>
  <head>
    <title>VeriFaith Dashboard</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <%= render 'shared/javascript' %>
    <%= render 'shared/dashboard_js' %>
  </head>

  <body>
    <div class="dashboard-container">
      <%= render 'shared/navbar' %>

      <div class="dashboard-main">
        <%= render 'shared/flash_messages' %>
        <header class="dashboard-header">
          <div class="header-actions">
            <% if current_page?(dashboard_path) || current_page?(claims_path) %>
              <%= form_with url: dashboard_path, method: :get, data: { controller: "search" } do |f| %>
                <div class="search-bar">
                  <i class="fas fa-search search-icon"></i>
                  <%= f.text_field :search, 
                      placeholder: "Search Claims",
                      value: params[:search],
                      data: { 
                        search_target: "input"
                      } %>
                </div>
              <% end %>
            <% end %>

            <div class="notifications">
              <i class="fas fa-bell"></i>
              <span class="notification-count">3</span>
            </div>

            <div class="separator">|</div>

            <div class="user-profile">
              <% if user_signed_in? %>
                <div class="user-info" data-action="click->dropdown#toggle">
                  <div class="user-details">
                    <span class="user-name"><%= current_user.full_name&.titleize || current_user.email.split('@').first.titleize %></span>
                  </div>
                  <i class="fas fa-chevron-down dropdown-icon"></i>
                </div>

                <div class="dropdown-menu">
                  <!-- Main dropdown content -->
                  <div class="dropdown-content main-content">
                    <div class="dropdown-item dropdown-parent">
                      <i class="fas fa-cog"></i>
                      <span>Settings</span>
                      <i class="fas fa-chevron-right dropdown-arrow"></i>
                    </div>
                    <div class="dropdown-divider"></div>
                    <%= button_to destroy_user_session_path, method: :delete, class: "dropdown-item" do %>
                      <i class="fas fa-sign-out-alt"></i>
                      <span>Log Out</span>
                    <% end %>
                  </div>
                  
                  <!-- Submenu content (hidden by default) -->
                  <div class="dropdown-content submenu-content">
                    <div class="settings-header">
                      <button class="settings-back-btn">
                        <i class="fas fa-arrow-left"></i>
                        <span>Back</span>
                      </button>
                    </div>
                    
                    <div class="settings-menu-container">
                      <div class="settings-menu-item <%= 'active' if local_assigns[:active] == 'edit' %>">
                        <%= link_to(edit_settings_path, data: { turbo: false }, class: 'settings-menu-link') do %>
                          <div class="settings-icon-wrapper">
                            <%= image_tag('edit-profile.svg', class: 'settings-menu-icon') %>
                          </div>
                          <span class="settings-text">Edit Profile</span>
                        <% end %>
                      </div>
                      
                      <div class="settings-menu-item upcoming">
                        <div class="settings-menu-link">
                          <div class="settings-icon-wrapper">
                            <%= image_tag('security.png', class: 'settings-menu-icon') %>
                          </div>
                          <span class="settings-text">Security</span>
                        </div>
                      </div>
                      
                      <div class="settings-menu-item <%= 'active' if local_assigns[:active] == 'notifications' %>">
                        <%= link_to(notifications_settings_path, data: { turbo: false }, class: 'settings-menu-link') do %>
                          <div class="settings-icon-wrapper">
                            <%= image_tag('settings-notification.svg', class: 'settings-menu-icon') %>
                          </div>
                          <span class="settings-text">Notifications</span>
                        <% end %>
                      </div>
                      
                      <div class="settings-menu-item <%= 'active' if local_assigns[:active] == 'subscription' %>">
                        <%= link_to(subscription_settings_path, data: { turbo: false }, class: 'settings-menu-link') do %>
                          <div class="settings-icon-wrapper">
                            <%= image_tag('Subscription.svg', class: 'settings-menu-icon') %>
                          </div>
                          <span class="settings-text">Subscription</span>
                        <% end %>
                      </div>
                      
                      <div class="settings-menu-item upcoming">
                        <div class="settings-menu-link">
                          <div class="settings-icon-wrapper">
                            <%= image_tag('delete-profile.svg', class: 'settings-menu-icon') %>
                          </div>
                          <span class="settings-text">Delete Profile</span>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              <% else %>
                <%= link_to "Sign In", new_user_session_path, class: "nav-text" %>
              <% end %>
            </div>
          </div>
        </header>

        <%= yield %>
      </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <% if @show_onboarding_modal %>
      <%= render 'onboarding/modal' %>
    <% end %>
  </body>
</html> 