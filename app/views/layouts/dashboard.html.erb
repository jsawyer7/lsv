<!DOCTYPE html>
<html>
  <head>
    <title>VeriFaith Dashboard</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%# Open Graph meta tags for claim pages %>
    <% if defined?(@claim) && @claim.present? && controller_name == 'claims' && action_name == 'show' %>
      <% 
        claim_title = @claim.fact? ? 'Fact on VeriFaith' : 'Claim on VeriFaith'
        raw_content = @claim.content.present? ? @claim.content : ''
        clean_content = raw_content.gsub(/<[^>]*>/, '').strip
        claim_description = clean_content.present? ? truncate(clean_content, length: 200, separator: ' ') : 'View this claim on VeriFaith'
        claim_url = request.original_url
        claim_image = request.base_url + asset_path('verifaith-logo.png')
      %>
      <meta property="og:type" content="article">
      <meta property="og:title" content="<%= claim_title %>">
      <meta property="og:description" content="<%= claim_description %>">
      <meta property="og:url" content="<%= claim_url %>">
      <meta property="og:image" content="<%= claim_image %>">
      <meta property="og:site_name" content="VeriFaith">
      <meta name="twitter:card" content="summary">
      <meta name="twitter:title" content="<%= claim_title %>">
      <meta name="twitter:description" content="<%= claim_description %>">
      <meta name="twitter:image" content="<%= claim_image %>">
    <% else %>
      <meta property="og:type" content="website">
      <meta property="og:title" content="VeriFaith Dashboard">
      <meta property="og:description" content="Truth You Can Test">
      <meta property="og:url" content="<%= request.original_url %>">
    <% end %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.css">
    <%= render 'shared/javascript' %>
    <%= render 'shared/dashboard_js' %>
  </head>

  <body class="<%= 'dashboard-nav-page' if dashboard_nav_page? %><%= ' settings-page' if controller_name == 'settings' %>">
    <%= render 'shared/top_navbar' %>
    <% unless dashboard_nav_page? %>
      <%= render 'shared/user_info_block' %>
    <% end %>
    <% if controller_name == 'feeds' && action_name == 'index' %>
      <%= render 'shared/post_composer' %>
      <%= render 'shared/sort_divider' %>
    <% end %>
    <div class="dashboard-container">
      <%= render 'shared/navbar' %>
      <% unless request.path.start_with?('/facts') %>
        <%= render 'shared/dashboard_sources' %>
      <% end %>

      <div class="dashboard-main">
        <%= render 'shared/flash_messages' %>

        <%= yield %>
      </div>
    </div>
    
    <%= render 'shared/share_modal' %>
    <%= render 'shared/share_js' %>
    <%= render 'shared/reshare_js' %>
    <%= render 'shared/veritalk_js' %>
    <%= render 'shared/top_navbar_js' %>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.js"></script>
    <!-- Rails UJS for AJAX functionality -->
    <script src="https://cdn.jsdelivr.net/npm/@rails/ujs@7.0.4/dist/rails-ujs.min.js"></script>
    <script>
      if (typeof Rails !== 'undefined') {
        Rails.start();
      }
    </script>
    <%= render 'shared/terms_consent_modal' %>
    <% if @show_onboarding_modal %>
      <%= render 'onboarding/modal' %>
    <% end %>
  </body>
</html> 