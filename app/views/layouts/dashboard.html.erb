<!DOCTYPE html>
<html>
  <head>
    <title>VeriFaith Dashboard</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.css">
    <%= render 'shared/javascript' %>
    <%= render 'shared/dashboard_js' %>
  </head>

  <body>
    <%= render 'shared/top_navbar' %>
    <%= render 'shared/user_info_block' %>
    <div class="dashboard-container">
      <%= render 'shared/navbar' %>

      <div class="dashboard-main">
        <%= render 'shared/flash_messages' %>

        <%= yield %>
      </div>
    </div>
    
    <%= render 'shared/share_modal' %>
    <%= render 'shared/share_js' %>
    <%= render 'shared/reshare_js' %>
    <%= render 'shared/veritalk_js' %>
    <%= render 'shared/top_navbar_js' %>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.js"></script>
    <!-- Rails UJS for AJAX functionality -->
    <script src="https://cdn.jsdelivr.net/npm/@rails/ujs@7.0.4/dist/rails-ujs.min.js"></script>
    <script>
      if (typeof Rails !== 'undefined') {
        Rails.start();
      }
    </script>
    <%= render 'shared/terms_consent_modal' %>
    <% if @show_onboarding_modal %>
      <%= render 'onboarding/modal' %>
    <% end %>
  </body>
</html> 